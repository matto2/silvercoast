---
import Button from "./Button.astro";
const { headline, subhead, text, photo1, buttontext, buttonlink } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
  <div class="grid place-content-center">
    <h1
      class="text-6xl md:text-7xl xl:text-8xl text-center md:text-left pb-0 font-bold text-brand-secondary font-serif mb-8 md:mt-12"
    >
      {headline}
    </h1>
    {
      subhead && (
        <h2 class="text-2xl md:text-3xl text-center md:text-left pb-0 font-semibold text-brand-primary mb-6">
          {subhead}
        </h2>
      )
    }
    <div class="block md:hidden mask-blob w-full h-full mb-6">
      <img src={photo1.src} alt="photo1" class="w-full h-full object-cover" />
    </div>
    <p class="text-lg md:text-xl text-left text-text-medium">
      {text}
    </p>
    <Button text={buttontext} link={buttonlink} />
  </div>
  <div class="hidden md:block mask-blob w-full h-full">
    <img src={photo1.src} alt="photo1" class="w-full h-full object-cover" />
  </div>
</div>

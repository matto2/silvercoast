---
import { Image } from "astro:assets";
const { img, alt, title, text } = Astro.props;
---

<div class="flex flex-col items-start mb-4">
  <Image src={img} alt={alt} class="w-full h-48 object-cover" />
  <h3 class="text-lg font-bold mt-4 text-text-dark">{title}</h3>
  <p class="text-text-medium mt-2">{text}</p>
</div>

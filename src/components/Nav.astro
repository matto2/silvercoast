---
const { currentPage } = Astro.props; // Pass the current page as a prop
const navItems = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
];
---

<nav
  class="md:flex items-center justify-between text-text-dark md:pt-4 pt-0 pb-8 md:pb-0"
>
  <!-- Logo and Title -->
  <a
    href="/"
    class="flex justify-center md:justify-start items-center space-x-4"
  >
    <img src="/scf-logo.svg" alt="logo" class="w-16 h-16 block" />
    <h1 class="text-2xl md:text-3xl font-bold text-brand-primary font-serif">
      Silver Coast Fitness
    </h1>
  </a>
  <!-- Navigation Links -->
  <div
    class="flex justify-center md:justify-end space-x-6 md:space-x-12 text-xl px-4 md:px-0 text-brand-secondary"
  >
    <a
      href="/"
      class={currentPage === "home"
        ? "font-bold text-brand-secondary"
        : "text-text-dark"}>Home</a
    >
    <a
      href="/about"
      class={currentPage === "about"
        ? "font-bold text-brand-secondary"
        : "text-text-dark"}>About</a
    >
    <a
      href="/contact"
      class={currentPage === "contact"
        ? "font-bold text-brand-secondary"
        : "text-text-dark"}>Contact</a
    >
  </div>
</nav>
